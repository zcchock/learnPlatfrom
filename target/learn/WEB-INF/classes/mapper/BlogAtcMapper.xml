<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zc.mapper.BlogAtcMapper">

    <insert id="insertBlogAtc">
        <!-- ignore 主键冲突，报错 -->
        INSERT ignore INTO blog_atc (atc_id)
        VALUES (#{atcId})
    </insert>


    <select id="queryByKey" resultType="BlogAtc">
        <!-- 如何告诉MyBatis把结果映射到Appointment同时映射book属性 -->
        <!-- 可以自由控制SQL -->
        SELECT
        atc_id,
        atc_title,
        atc_type
        FROM
        blog_atc
        WHERE
        atc_id = #{atcId}
    </select>
</mapper>